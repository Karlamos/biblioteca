<odoo>
  <data>

    <record model="ir.ui.view" id="biblioteca_libro_list">
      <field name="name">biblioteca libro list</field>
      <field name="model">biblioteca.libro</field>
      <field name="arch" type="xml">
        <list>
            <field name="name"/>
            <field name="autor"/>
            <field name="genero"/>
            <field name="a_pub"/>
        </list>
      </field>
    </record>

    <record id="view_biblioteca_libro_form" model="ir.ui.view">
      <field name="name">biblioteca.libro.form</field>
      <field name="model">biblioteca.libro</field>
      <field name="arch" type="xml">
          <form string="Libro">
              <sheet>
                  <group>
                      <field name="isbn"/>
                      <field name="name"/>
                      <field name="autor"/>
                      <field name="genero"/>
                      <field name="a_pub"/>
                      <field name="descripcion"/>
                      <field name="portada_url" invisible="1"/> 
                      <field name="portada_html" readonly="1"/> 
                  </group>
              </sheet>
          </form>
      </field>
    </record>


<!-- autorrrrrrrr -->



    <record model="ir.ui.view" id="biblioteca_autor_list">
      <field name="name">biblioteca autor list</field>
      <field name="model">biblioteca.autor</field>
      <field name="arch" type="xml">
        <list>
            <field name="autor"/>
            <field name="descripcion"/>
        </list>
      </field>
    </record>

    <record model="ir.ui.view" id="biblioteca_autor_form">
      <field name="name">biblioteca autor form</field>
      <field name="model">biblioteca.autor</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="autor"/>
            <field name="descripcion"/>
          </group>
        </form>
      </field>
    </record>
  
<!-- prestamos -->

    <record model="ir.ui.view" id="biblioteca_prestamo_list">
      <field name="name">biblioteca prestamo list</field>
      <field name="model">biblioteca.prestamo</field>
      <field name="arch" type="xml">
        <list string="Préstamos">
            <field name="name"/>
            <field name="fecha_prestamo"/>
            <field name="libro_id"/>        
            <field name="multa"/>
            <field name="estado"/>
        </list>
      </field>
    </record>

    <record model="ir.ui.view" id="biblioteca_prestamo_form">
      <field name="name">biblioteca.prestamo.form</field>
      <field name="model">biblioteca.prestamo</field>
      <field name="arch" type="xml">
        <form string="Préstamo">
          <header>
            <button string ="Prestar" type="object" name="generar_prestamo"
              invisible="estado in ('p', 'd', 'm')" />
            <button string="Multar" type="object" name="action_registrar_multa"
             invisible="estado != 'p'" class="btn_warning" />


            <field name="estado" widget="statusbar"/>
          </header>
          <sheet>
            <group>
              <label for="name" string="Código de prestamo" />
              <field name="name" readonly = "estado in ('p', 'd', 'm')" nolabel="1"/>
              <field name="fecha_prestamo" readonly = "estado in ('p', 'd', 'm')"/>
              <field name="fecha_devolucion" readonly= "estado in ('p', 'd', 'm')" required="estado in ('p', 'm')"/>
              <field name="libro_id" readonly= "estado in ('p', 'd', 'm')" />
              <field name="usuario_id" readonly= "estado in ('p', 'd', 'm')"/>
              <field name="multa_bol" readonly= "estado in ('p', 'd', 'm')"/>
              <field name="multa" readonly= "estado in ('p', 'd', 'm')" invisible="multa_bol == False"/>
              <field name="fecha_maxima" readonly= "estado in ('p', 'd', 'm')"/>
              <field name="usuario" readonly= "estado in ('p', 'd', 'm')"/>
              <field name="multas_ids">  
                <list editable="bottom">
                  <field name="name_multa"/>
                  <field name="danado" readonly="perdida == True"/>
                  <field name="perdida" readonly="danado == True"/>
                  <field name="estado"/>
                </list>
              </field>  
            </group>
          </sheet>
        </form>
      </field>
    </record>

<!-- Multas -->

    <record model="ir.ui.view" id="biblioteca_multa_list">
      <field name="name">biblioteca multa list</field>
      <field name="model">biblioteca.multa</field>
      <field name="arch" type="xml">
        <form>
          <group> 
            <field name="name_multa"/>         
            <field name="prestamo"/>
            <field name="perdida"/>
            <field name="danado"/>
            <field name="estado"/>
          </group> 
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="biblioteca_multa_form">
      <field name="name">biblioteca multa form</field>
      <field name="model">biblioteca.multa</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="name_multa"/>         
            <field name="prestamo"/>
            <field name="danado" readonly="perdida == True"/>
            <field name="perdida" readonly="danado == True"/>
            <field name="estado"/>
          </group>
        </form>
      </field>
    </record>

<!-- personal -->


