<odoo>
  <data>
    <template id="report_prestamo_pdf_template">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
          <div class="page">
            <h2>Comprobante de Prestamo</h2>
            <p><strong>Codigo:</strong> <t t-esc="o.name"/></p>
            <p><strong>Usuario:</strong> <t t-esc="o.usuario_id.nombre"/></p>
            <p><strong>Libro:</strong> <t t-esc="o.libro_id.name"/></p>
            <p><strong>Fecha de prestamo:</strong> <t t-esc="o.fecha_prestamo"/></p>
            <p><strong>Fecha maxima de devolucion:</strong> <t t-esc="o.fecha_maxima"/></p>
            <p><strong>Estado:</strong> <t t-esc="o.estado"/></p>
          </div>
        </t>
      </t>
    </template>

    <record id="report_prestamo_pdf" model="ir.actions.report">
      <field name="name">Comprobante de Prestamo</field>
      <field name="model">biblioteca.prestamo</field>
      <field name="report_type">qweb-pdf</field>
      <field name="report_name">biblioteca.report_prestamo_pdf_template</field>
      <field name="report_file">biblioteca.report_prestamo_pdf_template</field>
      <field name="binding_model_id" ref="model_biblioteca_prestamo"/>
      <field name="binding_type">report</field>
    </record>
  </data>
</odoo>